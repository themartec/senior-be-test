<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <meta name="google-signin-client_id" content="758762747449-d169ftgqkcp4ssg062vau3me0l59jqce.apps.googleusercontent.com">
  <meta name="google-signin-scope" content="https://www.googleapis.com/auth/analytics.readonly">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>

<h1 style="text-align: center;padding: 40px;"><%= title %></h1>

<div class="container text-center">
  <div class="row">
    <div class="col">
      <% if (user) { %>
        <p>Welcome, <%= user.email %></p>
      <% } else { %>
        <a href="/oauth2/google" class="btn btn-primary">Connect your Google Analytics Account</a>
      <% } %>
    </div>
    <div class="col">
      <!-- The API response will be printed here. -->
      <textarea cols="80" rows="20" id="query-output"></textarea>
    </div>
  </div>
</div>

<script>
  // Replace with your view ID.
  const VIEW_ID = '<REPLACE_WITH_VIEW_ID>';

  // Query the API and print the results to the page.
  function queryReports() {
    gapi.client.request({
      path: '/v4/reports:batchGet',
      root: 'https://analyticsreporting.googleapis.com/',
      method: 'POST',
      body: {
        reportRequests: [
          {
            viewId: VIEW_ID,
            dateRanges: [
              {
                startDate: '7daysAgo',
                endDate: 'today'
              }
            ],
            metrics: [
              {
                expression: 'ga:sessions'
              }
            ]
          }
        ]
      }
    }).then(displayResults, console.error.bind(console));
  }

  function displayResults(response) {
    document.getElementById('query-output').value = JSON.stringify(response.result, null, 2);
  }
</script>

<!-- Load the JavaScript API client and Sign-in library. -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</body>
</html>